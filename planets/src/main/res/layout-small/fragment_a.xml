<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1"
    android:padding="10dp"
    android:layout_gravity="top">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.andrewq.planets.FragmentA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="30sp"
                android:text="@string/sun_title"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/sun"
                android:layout_below="@+id/sun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sun"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sun_sub_title_1"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:text="@string/sun_sub_title_1"
                android:textStyle="bold"
                android:layout_below="@+id/sun"
                android:layout_centerHorizontal="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sun_description"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:text="@string/sun_description"
                android:layout_below="@+id/sun_sub_title_1"
                android:layout_centerHorizontal="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sun_sub_title_2"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:text="@string/sun_sub_title_2"
                android:textStyle="bold"
                android:layout_below="@+id/sun_description"
                android:layout_centerHorizontal="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sun_description_2"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:text="@string/sun_description_2"
                android:layout_below="@+id/sun_sub_title_2"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:text="@string/button_1"
                android:layout_below="@+id/sun_description_2"
                android:layout_centerHorizontal="false"/>

        </RelativeLayout>

    </FrameLayout>

</ScrollView>